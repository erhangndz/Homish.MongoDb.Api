@using DtoLayer.DTOS.CityDtos;
@model UpdateCityDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h3 class="container">Şehir Düzenleme Sayfası</h3>
<br />

<form asp-action="Update" method="post">
    @Html.HiddenFor(x=>x.CityID)
    <label>Şehir</label>
    @Html.TextBoxFor(x=>x.CityName, new{@class="form-control"})
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x=>x.Description, new{@class="form-control"})
    <br />
    <label>İlan Sayısı</label>
    @Html.TextBoxFor(x=>x.PropCount, new{@class="form-control"})
    <br />

    <button class="btn btn-info">Kaydet</button>


</form>



