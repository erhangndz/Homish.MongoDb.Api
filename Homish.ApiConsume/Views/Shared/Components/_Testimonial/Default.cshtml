@using DtoLayer.DTOS.TestimonialDtos;
@model List<ResultTestimonialDto>

<section class="w3l-clients" id="clients">
    <!-- /grids -->
    <div class="cusrtomer-layout py-5">
        <div class="container py-lg-4 py-md-3 pb-lg-0">
            <div class="heading text-center mx-auto">
                <h6 class="sub-title text-center">Müşterilerimizin hakkımızda söyledikleri</h6>
                <h3 class="hny-title mb-md-5 mb-4">Bizi bir de onlardan dinleyin</h3>
            </div>
            <!-- /grids -->
            <div class="testimonial-width mt-5">
                <div id="owl-demo1" class="owl-two owl-carousel owl-theme">
                    @foreach (var item in Model)
                    {
                        
                    
                    <div class="item">
                        <div class="testimonial-content">
                            <div class="testimonial">
                                <blockquote>
                                    <span class="fa fa-quote-left" aria-hidden="true"></span>
                                    @item.Comment
                                </blockquote>
                                <div class="testi-des">
                                    <div class="test-img">
                                        <img src="@item.Image" class="img-fluid" alt="client-img">
                                    </div>
                                    <div class="peopl align-self">
                                        <h3>@item.NameSurname</h3>
                                        <p class="indentity">@item.City</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
             }

                </div>
            </div>
        </div>
        <!-- /grids -->
    </div>
    <!-- //grids -->
</section>